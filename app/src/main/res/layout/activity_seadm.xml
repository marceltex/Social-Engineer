<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context=".activity.SEADMActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_state_1"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:clickable="false"
            android:background="@drawable/white_chevron"
            android:textSize="10sp"
            android:text="@string/state_1_btn_text"
            style="@style/Widget.AppCompat.Button.Borderless"/>

        <Button
            android:id="@+id/button_state_2"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:clickable="false"
            android:background="@drawable/white_chevron"
            android:textSize="10sp"
            android:text="@string/state_2_btn_text"
            style="@style/Widget.AppCompat.Button.Borderless"/>

        <Button
            android:id="@+id/button_state_3"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:clickable="false"
            android:background="@drawable/white_chevron"
            android:textSize="10sp"
            android:text="@string/state_3_btn_text"
            style="@style/Widget.AppCompat.Button.Borderless"/>

        <Button
            android:id="@+id/button_state_4"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:clickable="false"
            android:background="@drawable/white_chevron"
            android:textSize="10sp"
            android:text="@string/state_4_btn_text"
            style="@style/Widget.AppCompat.Button.Borderless"/>

        <Button
            android:id="@+id/button_state_5"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:clickable="false"
            android:background="@drawable/white_chevron"
            android:textSize="10sp"
            android:text="@string/state_5_btn_text"
            style="@style/Widget.AppCompat.Button.Borderless"/>

        <Button
            android:id="@+id/button_state_6"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:clickable="false"
            android:background="@drawable/white_chevron"
            android:textSize="10sp"
            android:text="@string/state_6_btn_text"
            style="@style/Widget.AppCompat.Button.Borderless"/>

        <Button
            android:id="@+id/button_state_7"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:clickable="false"
            android:background="@drawable/white_chevron"
            android:textSize="10sp"
            android:text="@string/state_7_btn_text"
            style="@style/Widget.AppCompat.Button.Borderless"/>

        <Button
            android:id="@+id/button_final_state"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:clickable="false"
            android:background="@drawable/white_chevron"
            android:textSize="10sp"
            android:text="@string/final_state_btn_text"
            style="@style/Widget.AppCompat.Button.Borderless"/>

    </LinearLayout>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.001"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/question_border">

        <TextView
            android:id="@+id/text_view_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="36sp"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

    </ScrollView>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.001"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_yes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/green"
            android:onClick="yesButtonClicked"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:text="@string/yes_btn_text"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"/>

        <Button
            android:id="@+id/button_no"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/red"
            android:onClick="noButtonClicked"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:text="@string/no_btn_text"/>

    </LinearLayout>

    <ImageButton
        android:id="@+id/image_button_help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="helpButtonClicked"
        android:layout_gravity="center"
        android:src="@drawable/help_icon"
        android:background="@android:color/transparent"/>

</LinearLayout>
